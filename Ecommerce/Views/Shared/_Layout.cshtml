<head>
    <!-- Basic Page Needs -->
    <meta charset="UTF-8">
    <!-- description -->
    <meta name="description" content="Ecommerce">
    <!-- author -->
    <meta name="author" content="Abdelrahman lotfy">
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- IE Browser Support -->
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- upper bar color for mobile -->
    <meta content='#1b1b1b' name='theme-color' />
    <!-- Favicon-->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.png">
    <!-- Bootstrap v4 -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Fontawesome v4 -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/ionicons.min.css">
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/owl.theme.default.min.css">
    <!-- animate -->
    <link rel="stylesheet" href="~/Content/animate.css">
    <!-- Swiper -->
    <link rel="stylesheet" href="~/Content/swiper.min.css">
    <!-- hover -->
    <link rel="stylesheet" href="~/Content/hover.css">
    <!-- Main Style -->
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- Modernizer Script for old Browsers -->
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
    <!-- Page Title -->
    <title>@ViewBag.Title</title>
</head>
<body>
    <section class="top_bar">
        <div class="container d-flex">
            <div class="mr-auto">
                <div class="d-flex">
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            EN
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">EN</a>
                            <a class="dropdown-item" href="#">AR</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Account
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </section>
    <section class="nav_online">
        <nav class="navbar navbar-expand-lg navbar-light" id="nav_shop">
            <div class="container">
                <a href="/Home/Index" class="navbar-brand mr-auto">
                    <img src="~/images/logo.png" />
                </a>
                @*@Html.ActionLink("<img src='~/images/logo.jpg' />", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav" style="margin-left: auto;">
                        <li class="nav-item active">
                            @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        </li>

                    </ul>

                </div>
            </div>
        </nav>
    </section>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!--
        Start JS Files
        ==================================== -->
    <!-- jQuery v3 -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap v4 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Owl Carousel -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <!-- Swiper -->
    <script src="~/Scripts/swiper.min.js"></script>
    <!-- Wow -->
    <script src="~/Scripts/wow.min.js"></script>
    <script src="~/Scripts/scrollspy.js"></script>
    <!-- ScriptJS -->
    <script src="~/Scripts/script.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
